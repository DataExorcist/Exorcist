{
    "plugins": [
        "@typescript-eslint"
    ],
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "ignorePatterns": [
        "dist",
        "node_modules"
    ],
    "parser": "@typescript-eslint/parser",
    "overrides": [],
    "parserOptions": {
        "project": true,
        "tsconfigRootDir": "__dirname",
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {},
        "extraFileExtensions": []
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "semi": [
            "error",
            "always"
        ],
        "prefer-const": [
            "error"
        ]
    }
}